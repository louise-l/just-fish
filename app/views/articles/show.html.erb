<div class="container show-article" data-aos="fade-up">
  <% if @article.image.attached? %>
    <%= cl_image_tag @article.image.key, class: 'article-image'%>
  <% end %>
  <h1><%= @article.title %></h1>
  <article><%= markdown(@article.content) %></article>
  <%= link_to "Voir tous nos articles", articles_path, class: 'button cta'%>

</div>




