<div class="container index-articles">

  <h1>Nos articles</h1>

  <div class="index-articles-grid">
    <% @articles.each do |article| %>
    <div class="index-articles-card">
    <%= link_to article_path(article), class: '' do %>
      <% if article.image.attached? %>
        <%= cl_image_tag article.image.key, class: ''%>
      <% end %>
      <h3><%= article.title %></h3>
      <p><%= article.small_description %></p>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
